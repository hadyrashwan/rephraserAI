{
  "manifest_version": 3,
  "name": "RephaserAI",
  "version": "1.0",
  "description": "Rephrase selected text with RephaserAI",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "windows",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "https://*/*",
    "http://localhost:11434/*"
  ],
  "optional_hosts": [
    "http://*/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "declarative_net_request": {
    "rule_resources": [{
      "id": "ruleset_1",
      "enabled": true,
      "path": "rules.json"
    }]
  }
}
